<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.url">jdbc:postgresql://localhost:5432/hibernate1?createDatabaseIfNotExist=true</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL9Dialect</property>
        <property name="hibernate.hbm2ddl.auto">create</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.discriminator.ignore_explicit_for_joined">true</property>
        <property name="connection.username"></property>
        <property name="connection.password"></property>

        <mapping class="com.easyum.hibernate.recipe1.Book1"/>
        <mapping class="com.easyum.hibernate.recipe1.ReaderErrata1"/>
        <mapping class="com.easyum.hibernate.recipe2.Book2"/>
        <mapping class="com.easyum.hibernate.recipe2.Publisher2"/>
        <mapping class="com.easyum.hibernate.recipe3.Book3"/>
        <mapping class="com.easyum.hibernate.recipe3.ReaderErrata3Eager"/>
        <mapping class="com.easyum.hibernate.recipe3.ReaderErrata3Lazy"/>
        <mapping class="com.easyum.hibernate.recipe4.Address4"/>
        <mapping class="com.easyum.hibernate.recipe4.Customer4"/>
        <mapping class="com.easyum.hibernate.recipe5.Address5"/>
        <mapping class="com.easyum.hibernate.recipe5.Customer5"/>
    </session-factory>
</hibernate-configuration>